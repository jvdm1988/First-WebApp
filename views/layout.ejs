<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>
    MiamiTech-social
    <!-- <%= title %> -->
  </title>
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Nothing+You+Could+Do" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>

  <div class="page-header">
    <h1>MIAMI TECH <small>social</small></h1>
    <input class="searchbar" type="text" name="search" placeholder="Search....">
    <ul class="navbar">

      <!-- Login button -->


      <div class="btn-group">
        <% if (typeof currentUser === "object") { %>
          <a href="/logout" class="btn btn-danger">Log Out</a>
        <% } else { %>
          <a href="/login" class="btn btn-danger">Log In</a>
          <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu">
            <li><a href="/signup"> Sign Up</a></li>
            <!-- <li role="separator" class="divider"></li> -->
          </ul>
        <% } %>
      </div> <!-- Closing Login Button -->
      <a class="homelink" href= "/"> Home</a>
  </div>



<%  if (typeof currentUser === "object") { %>
<div class="welcome-user">
  <ul class="media-list">
    <div class="media-body">
            <a href="/events/new"> | Add an Event |</a>
            <a href="/workshops/new"> | Add a Workshop |</a>
          <li class="media-heading">Welcome, <%=currentUser.username%>! </li>
    </div>
</ul>
</div>
  <%  } else { %>
    <div class="welcome-user2">
      <ul class="media-list">

    </ul>
    </div>

    <% } %>


  <%- body %>

